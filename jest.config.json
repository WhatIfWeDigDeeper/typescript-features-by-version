{
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": false,
        "isolatedModules": true
      }
    },
    "rootDir": ".",
    "roots": [
      "src"
    ],
    "testRegex": "src/.*\\.spec\\.ts$"
  }