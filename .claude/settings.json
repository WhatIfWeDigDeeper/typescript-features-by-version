{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Task",
      "TaskOutput",
      "TodoWrite",
      "Bash"
    ],
    "deny": [
      "Read(.env*)",
      "Write(production.config.*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(cp:*)",
      "Bash(dd:*)",
      "Bash(fsck:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Bash(tar:*)"
    ]
  }
}
